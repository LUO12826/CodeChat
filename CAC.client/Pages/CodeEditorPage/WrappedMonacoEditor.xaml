<UserControl
    x:Class="CAC.client.CodeEditorPage.WrappedMonacoEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CAC.client.CodeEditorPage"
    xmlns:editor="using:Monaco"
    xmlns:mtuc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <mtuc:ImageEx x:Name="avator" Source="{x:Bind CurrentSession.Contact.Base64Avatar,Mode=OneWay}" 
                              Height="40" Width="40" Padding="5" Style="{StaticResource RoundImageEx}"/>
                <TextBlock x:Name="userName" Margin="5 0 0 0" VerticalAlignment="Center" 
                           Text="{x:Bind CurrentSession.Contact.DisplayName,Mode=OneWay}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                <ComboBox x:Name="languageOptionBox" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100"
                          Background="Transparent" ItemsSource="{x:Bind LanguageOptions}" SelectionChanged="languageOptionBox_SelectionChanged"/>
                <Button Style="{StaticResource transparentButtonStyle}">
                    <FontIcon FontFamily="{StaticResource CAC-1}" Glyph="A"/>
                </Button>
                <Button Style="{StaticResource transparentButtonStyle}">
                    <FontIcon FontFamily="{StaticResource CAC-1}" Glyph="A"/>
                </Button>

            </StackPanel>
        </Grid>
        <editor:CodeEditor Name="editor" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="Editor_Loaded"/>
    </Grid>
</UserControl>
