            <Image Source="/Assets/icons/icon_grey.png" Width="120" Height="120" Margin="0 0 0 20"/>
            <AutoSuggestBox x:Name="userNameBox" TextChanged="userNameBox_TextChanged" SuggestionChosen="userNameBox_SuggestionChosen"
