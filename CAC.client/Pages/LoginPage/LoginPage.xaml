                       Visibility="{x:Bind IsLoginFailed, Mode=OneWay, Converter={StaticResource BoolToVisibility}}" TextAlignment="Center" Margin="0 10 0 0"/>

            <ProgressRing Margin="0 10 0 0" IsActive="True" Visibility="{x:Bind LoginRunning,Mode=OneWay, Converter={StaticResource BoolToVisibility}}" Width="40" Height="40"/>
        </StackPanel>
    </Grid>
